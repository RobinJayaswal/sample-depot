<h2> Sir, Your Cart </h2>
<ul>
	<%= render(@cart.line_items)%>
</ul>

<p> Total Price: <%=number_to_currency(@cart.cart_price)%>

<%= link_to 'Edit', edit_cart_path(@cart) %>
<% if (current_page?(controller: 'orders', action: 'new')) %>
	<% @current_view_checkout = true %>
<% else %>
	<% @current_view_checkout = false %>
<% end %>

<%= button_to "Checkout", new_order_path, method: :get, disabled: @current_view_checkout %>